{
	"name": "kwasila",
	"version": "0.0.0",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev --parallel",
		"lint": "turbo run lint",
		"test": "turbo run test",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"prepare": "husky install"
	},
	"lint-staged": {
		"apps/**/*.{js,ts,jsx,tsx}": [
			"eslint --fix"
		],
		"packages/**/*.{js,ts,jsx,tsx}": [
			"eslint --fix"
		],
		"*.json": [
			"prettier --write"
		]
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^13.4.0",
		"@testing-library/react-hooks": "^8.0.1",
		"@testing-library/user-event": "^14.4.3",
		"@types/jest": "^29.2.3",
		"esbuild": "^0.15.14",
		"esbuild-jest": "^0.5.0",
		"eslint-config-custom": "*",
		"husky": "^8.0.2",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^29.3.1",
		"lint-staged": "^13.0.3",
		"prettier": "latest",
		"turbo": "latest"
	},
	"engines": {
		"node": ">=14.0.0"
	},
	"dependencies": {},
	"packageManager": "yarn@1.22.19"
}
